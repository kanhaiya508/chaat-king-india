<?xml version="1.0"?>
<ruleset name="Laravel Custom">
    <description>Disable function docblock requirement</description>

    <!-- Scan only our code -->
    <file>app</file>
    <file>routes</file>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>

    <!-- Base standard -->
    <rule ref="PSR12"/>

    <!-- Turn off ALL FunctionComment rules -->
    <exclude name="PEAR.Commenting.FunctionComment"/>
    <exclude name="Squiz.Commenting.FunctionComment"/>
    <exclude name="Zend.Commenting.FunctionComment"/>
</ruleset>
